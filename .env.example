# ==============================================================================
# AIRDROPFARM CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ==============================================================================
# WALLET CONFIGURATION
# ==============================================================================

# BIP39 seed phrase (24 words) - KEEP THIS SECRET!
# Generate with: python main.py seed --generate --word-count 24
WALLET_SEED_MNEMONIC="your twenty four word seed phrase goes here make sure to keep this secure never share online"

# Encryption key for secure storage (32+ characters recommended)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WALLET_ENCRYPTION_KEY="your_strong_encryption_key_min_32_characters"

# Number of wallets to generate
WALLET_COUNT=100

# Shard size (wallets per group for staggered execution)
WALLET_SHARD_SIZE=10

# ==============================================================================
# SAFETY MODE
# ==============================================================================

# CRITICAL: Always use testnets only!
TESTNET_MODE=true

# ==============================================================================
# RPC ENDPOINTS - EVM CHAINS
# ==============================================================================

# Ethereum Testnets
ETH_RPC_SEPOLIA=https://rpc.sepolia.org
ETH_RPC_GOERLI=https://rpc.goerli.net

# Polygon Testnet
POLYGON_RPC_AMOY=https://rpc-amoy.polygon.technology

# Arbitrum Testnets
ARBITRUM_RPC_SEPOLIA=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_RPC_GOERLI=https://goerli-rollup.arbitrum.io/rpc

# Base Testnet
BASE_RPC_SEPOLIA=https://sepolia.base.org

# Optimism Testnet
OPTIMISM_RPC_SEPOLIA=https://sepolia.optimism.io

# BNB Smart Chain Testnet
BNB_RPC_TESTNET=https://data-seed-prebsc-1-s1.binance.org:8545

# Avalanche Testnet
AVALANCHE_RPC_FUJI=https://api.avax-test.network/ext/bc/C/rpc

# Fantom Testnet
FANTOM_RPC_TESTNET=https://rpc.testnet.fantom.network

# ==============================================================================
# RPC ENDPOINTS - NON-EVM CHAINS
# ==============================================================================

# Solana
SOLANA_RPC_DEVNET=https://api.devnet.solana.com
SOLANA_RPC_TESTNET=https://api.testnet.solana.com

# Aptos
APTOS_RPC_TESTNET=https://fullnode.testnet.aptoslabs.com/v1

# Algorand
ALGORAND_RPC_TESTNET=https://testnet-api.algonode.cloud

# ==============================================================================
# WRAPPED TOKEN ADDRESSES (for DEX swaps)
# ==============================================================================

# WETH addresses per chain (required for ETH <-> token swaps)
WETH_ETHEREUM_SEPOLIA=0x7b79995e5f793A07Bc00c21412e50Ecae098E7f9
WETH_POLYGON_AMOY=0x9c3C9283D3e44854697Cd22D3Faa240Cfb032889
WETH_ARBITRUM_SEPOLIA=0x980B62Da83eFf3D4576C647993b0c1D7faf17c73
WETH_BASE_SEPOLIA=0x4200000000000000000000000000000000000006

# ==============================================================================
# PROTOCOL CONTRACT ADDRESSES
# ==============================================================================

# Uniswap V2 Router Addresses
UNISWAP_ROUTER_ETHEREUM_SEPOLIA=0xC532a74256D3Db42D0Bf7a0400fEFDbad7694008
UNISWAP_ROUTER_POLYGON_AMOY=0x...
UNISWAP_ROUTER_ARBITRUM_SEPOLIA=0x...

# Staking Contract Addresses
STAKING_CONTRACT_ETHEREUM_SEPOLIA=0x...
STAKING_CONTRACT_POLYGON_AMOY=0x...

# Bridge Contract Addresses
BRIDGE_CONTRACT_ETHEREUM_SEPOLIA=0x...
BRIDGE_TYPE_ETHEREUM_SEPOLIA=layerzero

# LayerZero Chain IDs (for bridging)
LAYERZERO_CHAIN_ID_ETHEREUM_SEPOLIA=10161
LAYERZERO_CHAIN_ID_POLYGON_AMOY=10267
LAYERZERO_CHAIN_ID_ARBITRUM_SEPOLIA=10231

# ==============================================================================
# CAPTCHA SOLVING
# ==============================================================================

# Solver provider: 2captcha, anticaptcha, or manual
SOLVER_PROVIDER=2captcha

# API key for your chosen solver
SOLVER_API_KEY=your_2captcha_or_anticaptcha_api_key_here

# ==============================================================================
# DATABASE
# ==============================================================================

# SQLite (default, good for testing)
DATABASE_URL=sqlite:///data/airdrop_farming.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/airdrop_farming

# ==============================================================================
# ACTION SETTINGS
# ==============================================================================

# Enable/disable specific actions
ENABLE_STAKING=true
ENABLE_BRIDGING=true
ENABLE_SWAPPING=true

# Timing settings
MIN_DELAY_SECONDS=30
MAX_DELAY_SECONDS=300
ACTION_COOLDOWN_HOURS=6

# DEX settings
SLIPPAGE_TOLERANCE=0.03

# ==============================================================================
# ANTI-DETECTION SETTINGS
# ==============================================================================

# IP Management
USE_PROXIES=false
PROXY_LIST=http://user:pass@ip1:port,http://user:pass@ip2:port
IP_SHARD_SIZE=10
IP_STICKY_HOURS=24.0
FAUCET_IP_STICKY_HOURS=24.0
RPC_IP_STICKY_HOURS=12.0

# User-Agent Rotation
UA_SESSION_DURATION_HOURS=12.0
# UA_POOL_PATH=config/user-agents.txt

# Scheduling Entropy
OFF_DAYS=6
NIGHT_LULL_WINDOWS=0-6,22-24
WEEKEND_ACTIVITY_REDUCTION=0.3
NIGHT_ACTIVITY_REDUCTION=0.5
DAYPART_WINDOWS=morning:6-12,afternoon:12-18,evening:18-22

# Faucet Behavior
OVER_COOLDOWN_JITTER_MIN=0.1
OVER_COOLDOWN_JITTER_MAX=0.3
FAUCET_SKIP_PROB=0.05
ACTION_SKIP_PROB=0.1

# Auto-Throttle
AUTO_THROTTLE_ERROR_THRESHOLD=0.3
AUTO_THROTTLE_ERROR_WINDOW=300
AUTO_THROTTLE_PAUSE_DURATION=600
AUTO_THROTTLE_BACKOFF_MULTIPLIER=2.0

# ==============================================================================
# LOGGING
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/airdrop_farming.log

# Enable JSON logging
LOG_JSON=true

# ==============================================================================
# CONCURRENCY
# ==============================================================================

# Maximum concurrent operations
MAX_CONCURRENT_FAUCETS=10
MAX_CONCURRENT_ACTIONS=5

# ==============================================================================
# WEB3.PY v7 SETTINGS
# ==============================================================================

# HTTP Provider timeout (seconds)
WEB3_HTTP_TIMEOUT=60

# Connection pool settings
WEB3_POOL_CONNECTIONS=10
WEB3_POOL_MAXSIZE=20

# Retry settings for RPC calls
WEB3_MAX_RETRIES=3
WEB3_RETRY_DELAY=2

# ==============================================================================
# NOTES
# ==============================================================================

# 1. Keep this file secure and never commit to version control
# 2. Always use TESTNET_MODE=true for safety
# 3. Generate strong encryption keys
# 4. Update RPC endpoints if defaults are slow/unreliable
# 5. Adjust concurrency based on your system resources
# 6. Review anti-detection settings for your risk tolerance
# 7. Monitor logs for errors and rate limiting
# 8. Test with small wallet counts first (5-10)
