# ====================================
# Wallet & Seed Configuration
# ====================================
# IMPORTANT: Never commit actual seeds/keys to version control!
# Use HD wallet derivation - only store encrypted seed
WALLET_SEED_MNEMONIC=your_24_word_seed_phrase_here
WALLET_ENCRYPTION_KEY=your_strong_encryption_key_32_chars_min
WALLET_COUNT=100
WALLET_DERIVATION_PATH=m/44'/60'/0'/0

# ====================================
# RPC Endpoints (Multi-chain)
# ====================================
# Ethereum & EVM Chains
ETH_RPC_SEPOLIA=https://rpc.sepolia.org
ETH_RPC_GOERLI=https://rpc.goerli.eth.gateway.fm
POLYGON_RPC_AMOY=https://rpc-amoy.polygon.technology
ARBITRUM_RPC_SEPOLIA=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_RPC_GOERLI=https://goerli-rollup.arbitrum.io/rpc
BASE_RPC_SEPOLIA=https://sepolia.base.org
BNB_RPC_TESTNET=https://data-seed-prebsc-1-s1.binance.org:8545
AVALANCHE_RPC_FUJI=https://api.avax-test.network/ext/bc/C/rpc
FANTOM_RPC_TESTNET=https://rpc.testnet.fantom.network

# Non-EVM Chains
SOLANA_RPC_TESTNET=https://api.testnet.solana.com
SOLANA_RPC_DEVNET=https://api.devnet.solana.com
APTOS_RPC_TESTNET=https://fullnode.testnet.aptoslabs.com/v1
ALGORAND_RPC_TESTNET=https://testnet-api.algonode.cloud

# ====================================
# Database Configuration
# ====================================
# SQLite (default, no setup needed)
DATABASE_URL=sqlite:///data/airdrop_farming.db

# PostgreSQL (optional, uncomment to use)
# DATABASE_URL=postgresql://user:password@localhost:5432/airdrop_farming

# ====================================
# Captcha Solver Configuration
# ====================================
# Choose your solver provider(s)
SOLVER_API_KEY=your_solver_api_key_here
SOLVER_PROVIDER=2captcha
# Options: 2captcha, anticaptcha, manual
# Use 'manual' to queue captchas for manual solving

# Additional solver keys (optional)
TWOCAPTCHA_API_KEY=
ANTICAPTCHA_API_KEY=

# ====================================
# Proxy & IP Rotation (Optional)
# ====================================
# Comma-separated list of proxies
# Format: http://user:pass@ip:port or socks5://user:pass@ip:port
PROXY_LIST=
USE_PROXIES=false

# ====================================
# Anti-Detection: IP Management
# ====================================
# Number of wallets per IP shard (lower = more IPs used)
IP_SHARD_SIZE=10

# How long to stick with same IP before rotation (hours)
IP_STICKY_HOURS=24.0

# Separate stickiness for faucet traffic (optional, defaults to IP_STICKY_HOURS)
FAUCET_IP_STICKY_HOURS=24.0

# Separate stickiness for RPC traffic (optional, defaults to IP_STICKY_HOURS)
RPC_IP_STICKY_HOURS=12.0

# Randomization percentage for rotation timing (0.0-1.0)
IP_ROTATION_JITTER_PCT=0.2

# ====================================
# Anti-Detection: User-Agent Rotation
# ====================================
# Path to custom User-Agent list file (one per line)
UA_POOL_PATH=

# Inline User-Agent list (separated by |||)
UA_LIST=

# How long to stick with same UA per session (hours)
UA_SESSION_DURATION_HOURS=12.0

# ====================================
# Anti-Detection: Scheduling Entropy
# ====================================
# Days of week to skip (0=Monday, 6=Sunday), comma-separated
OFF_DAYS=

# Night lull windows when activity is reduced (format: start-end,start-end)
# Example: 0-6,22-24 means midnight-6am and 10pm-midnight
NIGHT_LULL_WINDOWS=0-6,22-24

# Daypart windows for scheduling (format: name:start-end,name:start-end)
# Example: morning:6-12,afternoon:12-18,evening:18-22
DAYPART_WINDOWS=morning:6-12,afternoon:12-18,evening:18-22

# Activity reduction factors (0.0-1.0)
WEEKEND_ACTIVITY_REDUCTION=0.3
NIGHT_ACTIVITY_REDUCTION=0.5

# ====================================
# Anti-Detection: Faucet Behavior
# ====================================
# Add random delay beyond cooldown (min/max as fraction of cooldown)
OVER_COOLDOWN_JITTER_MIN=0.1
OVER_COOLDOWN_JITTER_MAX=0.3

# Probability to randomly skip a faucet claim (0.0-1.0)
FAUCET_SKIP_PROB=0.05

# Probability to randomly skip an action (0.0-1.0)
ACTION_SKIP_PROB=0.1

# ====================================
# Anti-Detection: Auto-Throttle
# ====================================
# Error rate threshold to trigger throttle (0.0-1.0)
AUTO_THROTTLE_ERROR_THRESHOLD=0.3

# Time window for error rate calculation (seconds)
AUTO_THROTTLE_ERROR_WINDOW=300

# Minimum samples before calculating error rate
AUTO_THROTTLE_MIN_SAMPLES=10

# Initial pause duration when throttled (seconds)
AUTO_THROTTLE_PAUSE_DURATION=600

# Backoff multiplier for repeated throttles
AUTO_THROTTLE_BACKOFF_MULTIPLIER=2.0

# Maximum pause duration (seconds)
AUTO_THROTTLE_MAX_PAUSE=3600

# ====================================
# Faucet Configuration
# ====================================
# Path to faucet configuration file (YAML or JSON)
FAUCET_CONFIG_PATH=config/faucets.yaml
FAUCET_WORKER_CONCURRENCY=5
FAUCET_REQUEST_TIMEOUT=30
FAUCET_RETRY_MAX_ATTEMPTS=3
FAUCET_RETRY_BACKOFF_MIN=5
FAUCET_RETRY_BACKOFF_MAX=60

# ====================================
# Human-like Behavior Settings
# ====================================
# Randomization and anti-Sybil measures
MIN_DELAY_SECONDS=30
MAX_DELAY_SECONDS=300
HUMAN_JITTER_ENABLED=true
WALLET_SHARD_SIZE=10
STAGGER_REQUESTS_SECONDS=60

# ====================================
# Action Pipeline Settings
# ====================================
DAILY_ACTIONS_PER_WALLET=5
ACTION_COOLDOWN_HOURS=6
ENABLE_STAKING=true
ENABLE_BRIDGING=true
ENABLE_SWAPPING=true

# ====================================
# Observability
# ====================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/airdrop_farming.log
METRICS_ENABLED=true

# ====================================
# Safety & Mode
# ====================================
TESTNET_MODE=true
DRY_RUN=false